@model FacultyInformationSystem.Models.Course

@{
    ViewData["Title"] = "UpdateCourse";
}

<style>
    body {
        background: darkgrey;
        background-image: url('https://fisstorag.blob.core.windows.net/fis-container/BackroundBlur.jpg');
        background-size: cover;
    }
</style>
<h1>UpdateCourse</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="CourseId" class="control-label"></label></b>
                <input asp-for="CourseId" class="form-control" autocomplete="off" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="CourseName" class="control-label"></label></b>
                <input asp-for="CourseName" class="form-control" autocomplete="off" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="CourseCredits" class="control-label"></label></b>
                <input asp-for="CourseCredits"required  class="form-control" autocomplete="off" />
                <span asp-validation-for="CourseCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="DeptId" class="control-label"></label></b>
                <input asp-for="DeptId" required class="form-control" autocomplete="off" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group" style=" padding-bottom: 15px;">
                <input type="submit" value="Update Course" class="btn btn-primary" onclick="return confirm('Please, Confirm Updating Course!.')" style="background-color: black; color: white;" />
            </div>
        </form>
    </div>
</div>
