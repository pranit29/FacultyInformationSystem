@model FacultyInformationSystem.Models.Subject

@{
    ViewData["Title"] = "DeleteSubject";
}

<style>
    body {
        background: darkgrey;
        background-image: url('https://fisstorag.blob.core.windows.net/fis-container/BackroundBlur.jpg');
        background-size: cover;
    }
</style>

<h1>DeleteSubject</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="SubjectId" class="control-label"></label></b>
                <input asp-for="SubjectId" required class="form-control" required autocomplete="off" />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group" style=" padding-bottom: 15px;">
                <input type="submit" value="Delete Subject" class="btn btn-primary" onclick="return confirm('Please, Confirm Deletion of Subject!')" style="background-color: black; color: white;" />
            </div>
        </form>
    </div>
</div>