@model FacultyInformationSystem.Models.Subject

@{
    ViewData["Title"] = "UpdateSubject";
}
<style>
    body {
        background: darkgrey;
        background-image: url('https://fisstorag.blob.core.windows.net/fis-container/BackroundBlur.jpg');
        background-size: cover;
    }
</style>

<h1>UpdateSubject</h1>

<h4>Subject</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="SubjectId" class="control-label"></label></b>
                <input asp-for="SubjectId" required class="form-control" autocomplete="off" />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="SubjectName" class="control-label"></label></b>
                <input asp-for="SubjectName" required class="form-control" autocomplete="off" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="DeptId" class="control-label"></label></b>
                <input asp-for="DeptId" required class="form-control" autocomplete="off" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group" style=" padding-bottom: 15px;">
                <input type="submit" value="Update Subject" class="btn btn-primary" onclick="return confirm('Please, Confirm Updating Subject!.')" style="background-color: black; color: white;" />
            </div>
        </form>
    </div>
</div>